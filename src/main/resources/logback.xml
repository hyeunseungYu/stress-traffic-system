    <!-- TRACE > DEBUG > INFO > WARN > ERROR > OFF -->
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="console" /><!--위에서 설정한 콘솔(name이 console인 appender. 사용하고자 하는 appender 이름과 일치하는지를 확인하면 됨)-->
